#!/bin/sh -eux

./configure \
	--prefix=/usr \
	--mandir=/usr/share/man \
	--enable-shared \
	--disable-static \
	--enable-gpl \
	--enable-libbluray \
	--enable-libopencore-amrnb \
	--enable-libopencore-amrwb \
	--enable-libcdio \
	--enable-libfaac \
	--enable-libmp3lame \
	--enable-libopenjpeg \
	--enable-libpulse \
	--enable-libschroedinger \
	--enable-libvorbis \
	--enable-libtheora \
	--enable-nonfree \
	--enable-libv4l2 \
	--enable-libdc1394 \
	--enable-pthreads \
	--enable-postproc \
	--enable-avfilter\
	--enable-libspeex \
	--enable-libx264 \
	--enable-libx265 \
	--enable-libxvid \
	--enable-x11grab \
	--enable-version3 \
	--enable-swscale \
	--enable-vdpau \
	--enable-vaapi \
	--enable-gray \
	--enable-frei0r \
	--enable-libass \
	--enable-hwaccel=h263_vaapi \
	--enable-hwaccel=h263_vdpau \
	--enable-hwaccel=h264_vaapi \
	--enable-hwaccel=h264_vaapi \
	--enable-hwaccel=h264_vda \
	--enable-hwaccel=mpeg1_vdpau \
	--enable-hwaccel=mpeg2_vaapi \
	--enable-hwaccel=mpeg2_vdpau \
	--enable-hwaccel=mpeg4_vaapi \
	--enable-hwaccel=mpeg4_vdpau \
	--enable-hwaccel=vc1_vaapi \
	--enable-hwaccel=vc1_vdpau \
	--enable-hwaccel=wmv3_vaapi \
	--enable-hwaccel=wmv3_vdpau \
	--enable-openal \
	--enable-libfreetype \
	--enable-libgsm \
	--enable-libmodplug \
	--enable-libvpx \
	--enable-pic \
	--enable-swresample \
	--enable-avresample \
	--enable-dxva2 \
	--enable-fontconfig \
	--enable-openssl \
	--enable-gnutls \
	--enable-libcelt

ub_make
