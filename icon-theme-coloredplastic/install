convert -background none apps/utilities-terminal.svg categories/icon-terminal.png
convert -background none actions/mail-inbox.svg categories/icon-update.png
convert -background none apps/web-browser.svg categories/icon-web-browser.png
convert -background none apps/internet-feed-reader.svg categories/news.png
